{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "consensus://schema/status",
  "title": "Epic Status",
  "description": "Centralized state machine for epic lifecycle (UPC Protocol v2.0)",
  "type": "object",
  "required": ["epic_id", "tier", "phase", "mode", "iteration", "updated_at", "updated_by"],
  "properties": {
    "epic_id": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_-]+$",
      "description": "Unique identifier for the epic (e.g., EP-AUTH-001)"
    },
    "tier": {
      "type": "string",
      "enum": ["starter", "standard", "enterprise"],
      "description": "Protocol tier controlling validation strictness"
    },
    "phase": {
      "type": "string",
      "enum": ["requirements", "architecture", "planning", "implementation", "testing", "deployment", "done", "blocked"],
      "description": "Current phase in the epic lifecycle"
    },
    "mode": {
      "type": "string",
      "enum": ["full", "fast_track", "hotfix"],
      "description": "Execution topology determining agent chain"
    },
    "iteration": {
      "type": "integer",
      "minimum": 1,
      "description": "Current iteration number (increments on veto cycles)"
    },
    "approvals": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["analyst", "architect", "tech_lead", "developer", "qa", "devops", "sre", "security"]
      },
      "uniqueItems": true,
      "description": "Roles that have approved the current phase"
    },
    "blockers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "by", "reason"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["veto", "question", "dependency"]
          },
          "by": {
            "type": "string",
            "description": "Role that raised the blocker"
          },
          "reason": {
            "type": "string",
            "description": "Description of the blocker"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "description": "Active blockers preventing phase advancement"
    },
    "workstreams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique workstream identifier (e.g., WS-01)"
          },
          "title": {
            "type": "string",
            "description": "Human-readable workstream title"
          },
          "status": {
            "type": "string",
            "enum": ["todo", "in_progress", "done", "blocked"]
          },
          "assigned_to": {
            "type": "string",
            "description": "Role assigned to this workstream"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "description": "Micro-tasks for granular progress tracking"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "updated_by": {
      "type": "string",
      "description": "Role or user that made the last update"
    }
  },
  "additionalProperties": false
}

