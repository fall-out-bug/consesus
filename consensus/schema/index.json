{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "consensus://schema/index",
  "title": "Schema Registry",
  "description": "Index of all UPC Protocol v2.0 schemas",
  "version": "2.0.0",
  "schemas": {
    "status": {
      "path": "status.schema.json",
      "description": "Epic state machine"
    },
    "message": {
      "path": "message.schema.json",
      "description": "Agent communication"
    },
    "requirements": {
      "path": "requirements.schema.json",
      "description": "Analyst deliverable"
    },
    "architecture": {
      "path": "architecture.schema.json",
      "description": "Architect deliverable"
    },
    "plan": {
      "path": "plan.schema.json",
      "description": "Tech Lead deliverable"
    }
  },
  "validation": {
    "tier_starter": ["status"],
    "tier_standard": ["status", "message", "requirements", "architecture", "plan"],
    "tier_enterprise": ["status", "message", "requirements", "architecture", "plan"]
  }
}

