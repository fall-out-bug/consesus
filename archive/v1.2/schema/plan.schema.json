{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "consensus://schema/plan",
  "title": "Plan Artifact",
  "description": "Tech Lead deliverable defining executable implementation plan (UPC Protocol v2.0)",
  "type": "object",
  "required": ["epic_id", "workstreams"],
  "properties": {
    "epic_id": {
      "type": "string",
      "description": "Epic identifier"
    },
    "workstreams": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "tasks"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "owner": { "type": "string" },
          "tasks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "title"],
              "properties": {
                "id": { "type": "string" },
                "title": { "type": "string" },
                "description": { "type": "string" },
                "files": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Files to create or modify"
                },
                "tests": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Test commands to run"
                },
                "dependencies": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Task IDs this depends on"
                },
                "requirement_ids": {
                  "type": "array",
                  "items": { "type": "string" },
                  "description": "Linked requirement story IDs"
                },
                "estimated_loc": {
                  "type": "integer",
                  "description": "Estimated lines of code"
                }
              }
            },
            "minItems": 1
          }
        }
      },
      "minItems": 1,
      "description": "Workstreams with atomic tasks"
    },
    "testing_matrix": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "enum": ["unit", "integration", "e2e", "manual"] },
          "scope": { "type": "string" },
          "command": { "type": "string" }
        }
      },
      "description": "Test matrix for QA"
    },
    "deployment_steps": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Deployment checklist for DevOps"
    },
    "rollback_plan": {
      "type": "string",
      "description": "Rollback procedure"
    }
  },
  "additionalProperties": false
}

